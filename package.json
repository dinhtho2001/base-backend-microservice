{
    "name": "manager-coffee",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "build": "npx tsc",
        "start": "node dist/APIGateway/src/app.js",
        "start:prod": "cross-env NODE_ENV=production node dist/APIGateway/src/app.js",
        "prod": "nodemon cross-env NODE_ENV=production --exec ts-node APIGateway/src/app.ts",
        "dev:api-gateway": "nodemon --exec ts-node APIGateway/src/app.ts",
        "dev:user-service": "cd services/UserService && npm run dev",
        "dev": "concurrently \"npm run dev:api-gateway\" \"npm run dev:user-service\""
    },
    "dependencies": {
        "axios": "^1.6.5",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.17.1",
        "morgan": "^1.10.0",
        "nodemon": "^2.0.19",
        "pino": "^6.11.3",
        "pino-pretty": "^5.0.2",
        "reflect-metadata": "^0.1.13",
        "ts-node": "^10.9.1",
        "typescript": "^4.5.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/lodash": "^4.14.182",
        "@types/morgan": "^1.9.9",
        "@types/pino": "^7.0.5",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3"
    }
}
